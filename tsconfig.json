{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Path Options */
    "baseUrl": "",
    "paths": {
      "@asset/*": ["src/asset/*"],
      "@incom/*": ["src/features/incom/*"],
      "@popup/*": ["src/features/popup/*"],
      "@scripts/*": ["src/scripts/*"],
      "@shared/*": ["src/shared/*"],
      "@src/*": ["src/*"],

      "@root/*": ["*"]
      //     "@dashboard/*": ["dashboard/*"],
      //     "@guide/*": ["guide/*"],
      //     "@/*": ["*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["**/*.tsx", "**/*.ts", "webpack.config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
